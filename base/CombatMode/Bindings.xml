<Bindings>
	<Binding name="COMBATMODE_ENABLE" header="CombatMode" runOnUp="true">
		-- description="Enable while holding or toggle with click"
		CombatMode:EnableKey(keystate)
	</Binding>
	
	<Binding name="COMBATMODE_TOGGLE">
		-- description="Toggle Combat Mode when clicked"
		CombatMode:ToggleKey()
	</Binding>
	
	<Binding name="COMBATMODE_HOLD" runOnUp="true">
		-- description="Switch Combat Mode while holding"
		CombatMode:HoldKey(keystate)
	</Binding>
	
	<!--ModifiedClick action="CombatModeEnableModifier" default="NONE" />
	<ModifiedClick action="CombatModeDisableModifier" default="NONE" /--> 

	<ModifiedClick action="CM_ENABLE_MOD" default="SHIFT" />
	<ModifiedClick action="CM_DISABLE_MOD" default="ALT" /> 

	<Binding name="TURNWITHMOUSE" runOnUp="true">
		-- description="Turn with mouse, no actions"
		CombatMode.commands:TurnWithMouseKey(keystate)
	</Binding>
	
	<!--
	Renamed commands: keep the old as hidden and rebind to new on load
	"Combat Mode Toggle" -> COMBATMODE_TOGGLE
	"(Hold) Switch Mode" -> COMBATMODE_HOLD
	If only one is bound -> COMBATMODE_HOLDTOGGLE
	-->
	<Binding name="Combat Mode Toggle" hidden="true" />
	<Binding name="(Hold) Switch Mode" hidden="true" />
</Bindings>
