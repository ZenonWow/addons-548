<Bindings>

	<Binding name="COMBATMODE_ENABLE" header="CombatMode">
		-- description="Enable Action mode"
		CombatMode:EnableKey(keystate)
		-- CombatMode:EnableKey(keystate)  --  runOnUp="true">
	</Binding>
	
	<Binding name="COMBATMODE_TOGGLE">
		-- description="Toggle Action mode"
		CombatMode:ToggleKey()
	</Binding>

	<ModifiedClick action="ActionModeEnableModifier" default="SHIFT" />
	<ModifiedClick action="ActionModeDisableModifier" default="ALT" /> 

	<!--
	Renamed commands: keep the old configuration with hidden bindings and rebind to the new on load.
	"Combat Mode Toggle" -> COMBATMODE_TOGGLE
	"(Hold) Switch Mode" -> TURNORACTION
	-->
	<Binding name="Combat Mode Toggle" hidden="true" />
	<Binding name="(Hold) Switch Mode" hidden="true" />


	<Binding name="CLICK FocusMouseoverButton:LeftButton">
		-- description="Focus Mouseover"
	</Binding>
	
</Bindings>
