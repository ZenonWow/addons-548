<Bindings>


	<!-- WorldFrame click modifiers: -->
	<ModifiedClick action="FOCUS"    default="SHIFT-BUTTON1"/>
	<ModifiedClick action="INTERACT" default="CTRL-BUTTON1"/>
	
	<!-- PlayerName click with different modifiers: -->
	<ModifiedClick action="CHATTARGET" default="BUTTON1"/>
	<ModifiedClick action="CHATFOCUS" default="SHIFT-BUTTON1"/>
	<ModifiedClick action="REMEMBER"  default="SHIFT-BUTTON1"/>
	<ModifiedClick action="WHISPER"  default="CTRL-BUTTON1"/>
	<ModifiedClick action="TRADE"    default="CTRL-BUTTON2"/>
	<ModifiedClick action="INVITE"   default="ALT-BUTTON2"/>
	<ModifiedClick action="CHATTER_SET_MAIN"      default="ALT-BUTTON1"/>
	<ModifiedClick action="PRAT_MENUITEM_LINKALT" default="ALT-BUTTON1"/>


  <!-- ClearTarget keybind is missing since vanilla wow: you have to close every window with ESC and then you can lose that target -->
	<Binding name="CLEARTARGET" category="BINDING_HEADER_MISC">
		ClearTarget();
		-- PROTECTED: need  /cleartarget  macro to bind to
		-- how to use some SecureTemplate?
	</Binding>

	<Binding name="FOCUSMOUSEOVER" category="BINDING_HEADER_MISC">
		FocusUnit('mouseover');
		-- PROTECTED: need  /focus [@mouseover,nodead]  macro to bind to
	</Binding>

</Bindings>
